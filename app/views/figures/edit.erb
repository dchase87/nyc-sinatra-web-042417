<h1>Edit <%= @figure.name %>:</h1>
  <form action="/figures/<%=@figure.id%>" method="POST">

    <br></br>

    <label>Name:</label>

    <br>

      <input type="text" name="figure[name]" id="figure_name">

      <br></br>

    <label>Choose an existing title:</label>

    <br></br>

      <% @titles.each do |title| %>
      <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"
      <%='checked' if @figure.titles.include?(title) %>><%=title.name%></input>
      <% end %>

      <br></br>

    <label>and/or, create a new title:</label>

    <br>

      <input type="text" name="title[name]" id="new_title">

      <br></br>

    <label>Choose an existing landmark:</label>

    <br></br>

      <% @landmarks.each do |landmark| %>
      <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"
      <%='checked' if @figure.landmarks.include?(landmark) %>><%=landmark.name%></input>
      <% end %>

      <br></br>

    <label>and/or, create a new landmark:</label>

    <br>

      <input type="text" name="landmark[name]" id="new_landmark">

      <br></br>

    <input type="submit" value="Edit Figure">
    <input id="hidden" type="hidden" name="_method" value="patch">
  </form>
