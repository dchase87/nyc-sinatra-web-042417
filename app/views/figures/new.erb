<h1>Create a new figure</h1>

<form  action='/figures' method='POST'>

  <label>Name:</label>
    <input type="text" name='figure[name]' id="figure_name">
  <br><br>

  <label>Choose an Existing Title:</label>
    <br>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>">
      <%=title.name%>
      <br>
    </input>
    <% end %>

    <label>and/or, create a new title:</label>
    <input type="text" name="title[name]" id="new_title">
    <br><br>

    <label>Choose an Existing Landmark:</label>
    <br>
    <% @landmarks.each do |landmark| %>
      <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>">
        <%=landmark.name%>
        <br>
      </input>
    <% end %>

    <label>and/or, create a new landmark:</label>
    <input type="text" name="landmark[name]" id="new_landmark">
    <br><br>
    <input type="submit" value="Create New Figure">
</form>
